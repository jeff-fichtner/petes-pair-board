<div class='list'>
    <%= form_for :feedback, url: pairing_feedbacks_path do |f| %>
        <%= f.label :comment, 'Leave ASK Feedback' %>
        <%= f.text_field :comment %><br>

        <input name='rating' value='1' id='radio' type='radio'>
        <label for='radio'>1</label>

        <input name='rating' value='2' id='radio2' type='radio'>
        <label for='radio2'>2</label>

        <input name='rating' value='3' id='radio3' type='radio'>
        <label for='radio3'>3</label>

        <input name='rating' value='4' id='radio4' type='radio'>
        <label for='radio4'>4</label>

        <input name='rating' value='5' id='radio5' type='radio'>
        <label for='radio5'>5</label>

        <input type='hidden' name='pairing_id' value="#{params[:id]}">

        <%= f.submit class: 'btn' %>
    <% end %>
</div>
